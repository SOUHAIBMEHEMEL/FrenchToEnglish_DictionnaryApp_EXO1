                android:layout_height="300dp"
                android:id="@+id/videoPlayer"
                android:layout_gravity="center_horizontal" />
    </LinearLayout>



    <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </ListView>

</LinearLayout>